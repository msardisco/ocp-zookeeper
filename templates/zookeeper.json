{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "description": "Zookeeper Deployment and Runtime Components",
            "iconClass": "icon-java",
            "tags": "java,zookeeper"
        },
        "name": "zookeeper"
    },
    "labels": {
        "template": "zookeeper"
    },
    "parameters": [
        {
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "zookeeper",
            "required": true
        },
        {
            "description": "Zookeeper ImageStream Tag",
            "name": "ZOOKEEPER_IMAGESTREAMTAG",
            "value": "",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-headless",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "server",
                        "protocol": "TCP",
                        "port": 2888,
                        "targetPort": 2888
                    },
                    {
                        "name": "leader-election",
                        "protocol": "TCP",
                        "port": 3888,
                        "targetPort": 3888
                    }
                ],
                "selector": {
                    "application": "${APPLICATION_NAME}"
                },
                "portalIP": "None",
                "clusterIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "client",
                        "protocol": "TCP",
                        "port": 2181,
                        "targetPort": 2181
                    }
                ],
                "selector": {
                    "application": "${APPLICATION_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-config",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "data": {
                "client.cnxns": "60",
                "init": "10",
                "jvm.heap": "2G",
                "purge.interval": "0",
                "snap.retain": "3",
                "sync": "5",
                "tick": "2000"
            }
        },
        {
            "kind": "StatefulSet",
            "apiVersion": "apps/v1beta1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "replicas": 3,
                "selector": {
                    "matchLabels": {
                        "application": "${APPLICATION_NAME}"
                    }
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "application": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "${ZOOKEEPER_IMAGESTREAMTAG}",
                                "command": [
                                    "sh",
                                    "-c",
                                    "bin/zkGenConfig.sh && bin/zkServer.sh start-foreground"
                                ],
                                "ports": [
                                    {
                                        "name": "client",
                                        "containerPort": 2181,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "server",
                                        "containerPort": 2888,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "leader-election",
                                        "containerPort": 3888,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "ZK_REPLICAS",
                                        "value": "3"
                                    },
                                    {
                                        "name": "ZK_HEAP_SIZE",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "jvm.heap"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_TICK_TIME",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "tick"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_INIT_LIMIT",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "init"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_SYNC_LIMIT",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "tick"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_MAX_CLIENT_CNXNS",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "client.cnxns"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_SNAP_RETAIN_COUNT",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "snap.retain"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_PURGE_INTERVAL",
                                        "valueFrom": {
                                            "configMapKeyRef": {
                                                "name": "${APPLICATION_NAME}-config",
                                                "key": "purge.interval"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZK_CLIENT_PORT",
                                        "value": "2181"
                                    },
                                    {
                                        "name": "ZK_SERVER_PORT",
                                        "value": "2888"
                                    },
                                    {
                                        "name": "ZK_ELECTION_PORT",
                                        "value": "3888"
                                    }
                                ],
                                "resources": {
                                    "requests": {
                                        "cpu": "256m",
                                        "memory": "512Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "datadir",
                                        "mountPath": "/var/lib/zookeeper"
                                    }
                                ],
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "bin/zkOk.sh"
                                        ]
                                    },
                                    "initialDelaySeconds": 15,
                                    "timeoutSeconds": 5,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/opt/zookeeper/bin/zkOk.sh"
                                        ]
                                    },
                                    "initialDelaySeconds": 15,
                                    "timeoutSeconds": 5,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst"
                    }
                },
                "volumeClaimTemplates": [
                    {
                        "metadata": {
                            "name": "datadir",
                            "labels": {
                                "application": "${APPLICATION_NAME}"
                            }
                        },
                        "spec": {
                            "accessModes": [
                                "ReadWriteOnce"
                            ],
                            "resources": {
                                "requests": {
                                    "storage": "1Gi"
                                }
                            }
                        }
                    }
                ],
                "serviceName": "${APPLICATION_NAME}-headless"
            }
        }
    ]
}
